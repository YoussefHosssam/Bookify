@model Bookify.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold"><i class="bi bi-person-circle"></i> My Profile</h1>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card summary-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Profile Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <small class="form-text text-muted">Your unique username (3-50 characters)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">Your email address for notifications</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+20 123 456 7890" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Update Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card summary-card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-key"></i> Change Password</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Use the form below to change your password.</p>
                    <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-primary">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card summary-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Quick Links</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="@Url.Action("UserBookings", "Booking")" class="text-decoration-none">
                                <i class="bi bi-calendar-check"></i> My Bookings
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="@Url.Action("Index", "Rooms")" class="text-decoration-none">
                                <i class="bi bi-door-open"></i> Browse Rooms
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="@Url.Action("ViewCart", "Cart")" class="text-decoration-none">
                                <i class="bi bi-cart"></i> Shopping Cart
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

