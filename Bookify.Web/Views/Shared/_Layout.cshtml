<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookify</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fancyapps/ui/dist/fancybox.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bookify.Web.styles.css" asp-append-version="true" />
</head>
<body class="bookify-body">
    <header class="bookify-header">
        <nav class="bookify-navbar navbar navbar-expand-lg" id="bookifyNavbar">
            <div class="container-xl align-items-center">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="brand-monogram">B</div>
                    <div class="brand-wordmark">
                        <span>Bookify</span>
                        <small>Premium Stays</small>
                    </div>
                </a>

                <button class="navbar-toggler bookify-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#bookifyNav" aria-controls="bookifyNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="bookifyNav">
                    <ul class="navbar-nav mx-auto gap-lg-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rooms" asp-action="Index">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Facilities">Facilities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a>
                            </li>
                        }
                    </ul>

                    <div class="navbar-actions d-flex align-items-center gap-3">
                        <button class="icon-action" type="button" data-bs-toggle="modal" data-bs-target="#globalSearchModal" aria-label="Search Bookify">
                            <i class="bi bi-search"></i>
                        </button>
                        <a class="icon-action position-relative" asp-controller="Cart" asp-action="ViewCart" aria-label="Cart">
                            <i class="bi bi-bag"></i>
                            <span id="cart-count" class="cart-badge">0</span>
                        </a>
                        <div class="d-none d-lg-block">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="mobile-auth d-lg-none text-center">
        @await Html.PartialAsync("_LoginPartial")
    </div>

    <div class="container-fluid px-0 page-shell">
        <main role="main" class="pb-5">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show fade-in luxe-alert" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show fade-in luxe-alert" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show fade-in luxe-alert" role="alert">
                    <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="bookify-footer">
        <div class="container-xl">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="brand-monogram mb-3">B</div>
                    <p>Curated stays, legendary service, and seamless reservations across the world's finest destinations.</p>
                    <div class="footer-social d-flex gap-3">
                        <a href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-md-2">
                    <h6>Explore</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li><a asp-action="Index" asp-controller="Rooms">Rooms</a></li>
                        <li><a asp-action="About" asp-controller="Home">About</a></li>
                        <li><a asp-action="Contact" asp-controller="Home">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Support</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Payment Options</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Newsletter</h6>
                    <p>Receive invites to exclusive suites, curated experiences, and insider rates.</p>
                    <form class="newsletter-form">
                        <input type="email" class="form-control" placeholder="Email Address">
                        <button type="submit" class="btn btn-gold w-100 mt-2">Subscribe</button>
                    </form>
                </div>
            </div>
            <div class="footer-bottom mt-4 d-flex flex-column flex-md-row justify-content-between align-items-center">
                <p class="mb-0">&copy; @DateTime.UtcNow.Year Bookify. Crafted for discerning travelers.</p>
                <div class="footer-meta">
                    <span>Luxury | Design | Hospitality</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Global Search Modal -->
    <div class="modal fade" id="globalSearchModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content search-modal">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold text-uppercase">Search Bookify</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="search-bar">
                        <i class="bi bi-search"></i>
                        <input type="text" class="form-control" placeholder="Hotel, destination, or experience">
                    </div>
                    <div class="popular-searches mt-4">
                        <span>Popular: </span>
                        <button class="chip">Family Suites</button>
                        <button class="chip">Spa & Wellness</button>
                        <button class="chip">Beachfront</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@fancyapps/ui/dist/fancybox.umd.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Configure Toastr
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
        
        // Update cart count from session
        function updateCartCount() {
            fetch('@Url.Action("GetCartCount", "Cart")')
                .then(response => response.json())
                .then(data => {
                    if (data.count !== undefined) {
                        $('#cart-count').text(data.count);
                    }
                })
                .catch(() => {});
        }
        
        // Update cart count on page load
        updateCartCount();

        // Navbar scroll state
        const navbar = document.getElementById('bookifyNavbar');
        const handleScroll = () => {
            if (!navbar) return;
            if (window.scrollY > 80) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        };
        document.addEventListener('scroll', handleScroll);
        handleScroll();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

