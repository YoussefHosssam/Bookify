<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Bookify - Premium stays, legendary service, and seamless reservations across Egypt's finest destinations." />
    <meta name="author" content="Bookify" />
    <title>@ViewData["Title"] - Bookify</title>

    <!-- External Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fancyapps/ui/dist/fancybox.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- Application Stylesheets -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bookify.Web.styles.css" asp-append-version="true" />
</head>
<body class="bookify-body">
    <header class="bookify-header" role="banner">
        <nav class="bookify-navbar navbar navbar-expand-lg" id="bookifyNavbar" role="navigation" aria-label="Main navigation">
            <div class="container-xl align-items-center">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index" aria-label="Bookify Home">
                    <div class="brand-monogram" aria-hidden="true">B</div>
                    <div class="brand-wordmark">
                        <span>Bookify</span>
                        <small>Premium Stays</small>
                    </div>
                </a>

                <button class="navbar-toggler bookify-toggler" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#bookifyNav" 
                        aria-controls="bookifyNav" 
                        aria-expanded="false" 
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="bookifyNav">
                    <ul class="navbar-nav mx-auto gap-lg-3" role="menubar">
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" role="menuitem">Home</a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Rooms" asp-action="Index" role="menuitem">Rooms</a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Home" asp-action="Facilities" role="menuitem">Facilities</a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Home" asp-action="About" role="menuitem">About</a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact" role="menuitem">Contact</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item" role="none">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" role="menuitem">Admin</a>
                            </li>
                        }
                    </ul>

                    <div class="navbar-actions d-flex align-items-center gap-3">
                        <button class="icon-action" 
                                type="button" 
                                data-bs-toggle="modal" 
                                data-bs-target="#globalSearchModal" 
                                aria-label="Search Bookify">
                            <i class="bi bi-search" aria-hidden="true"></i>
                        </button>
                        <a class="icon-action position-relative" 
                           asp-controller="Cart" 
                           asp-action="ViewCart" 
                           aria-label="Shopping Cart">
                            <i class="bi bi-bag" aria-hidden="true"></i>
                            <span id="cart-count" class="cart-badge" aria-live="polite">0</span>
                        </a>
                        <div class="d-none d-lg-block">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <aside class="mobile-auth d-lg-none text-center" role="complementary" aria-label="Mobile authentication">
        @await Html.PartialAsync("_LoginPartial")
    </aside>

    <div class="container-fluid px-0 page-shell">
        <main role="main" class="pb-5">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show fade-in luxe-alert" 
                     role="alert" 
                     aria-live="polite">
                    <i class="bi bi-check-circle-fill" aria-hidden="true"></i> 
                    <span>@TempData["Success"]</span>
                    <button type="button" 
                            class="btn-close" 
                            data-bs-dismiss="alert" 
                            aria-label="Close alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show fade-in luxe-alert" 
                     role="alert" 
                     aria-live="assertive">
                    <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i> 
                    <span>@TempData["Error"]</span>
                    <button type="button" 
                            class="btn-close" 
                            data-bs-dismiss="alert" 
                            aria-label="Close alert"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show fade-in luxe-alert" 
                     role="alert" 
                     aria-live="polite">
                    <i class="bi bi-info-circle-fill" aria-hidden="true"></i> 
                    <span>@TempData["Info"]</span>
                    <button type="button" 
                            class="btn-close" 
                            data-bs-dismiss="alert" 
                            aria-label="Close alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="bookify-footer" role="contentinfo">
        <div class="container-xl">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="brand-monogram mb-3" aria-hidden="true">B</div>
                    <p>Curated stays, legendary service, and seamless reservations across Egypt's finest destinations.</p>
                    <nav class="footer-social d-flex gap-3" aria-label="Social media links">
                        <a href="#" aria-label="Follow us on Instagram"><i class="bi bi-instagram" aria-hidden="true"></i></a>
                        <a href="#" aria-label="Follow us on Twitter"><i class="bi bi-twitter" aria-hidden="true"></i></a>
                        <a href="#" aria-label="Follow us on Facebook"><i class="bi bi-facebook" aria-hidden="true"></i></a>
                        <a href="#" aria-label="Follow us on LinkedIn"><i class="bi bi-linkedin" aria-hidden="true"></i></a>
                    </nav>
                </div>
                <div class="col-md-2">
                    <h6>Explore</h6>
                    <nav aria-label="Explore navigation">
                        <ul class="list-unstyled footer-links">
                            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                            <li><a asp-action="Index" asp-controller="Rooms">Rooms</a></li>
                            <li><a asp-action="About" asp-controller="Home">About</a></li>
                            <li><a asp-action="Contact" asp-controller="Home">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-md-3">
                    <h6>Support</h6>
                    <nav aria-label="Support navigation">
                        <ul class="list-unstyled footer-links">
                            <li><a href="#">FAQs</a></li>
                            <li><a href="#">Payment Options</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Terms & Conditions</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-md-3">
                    <h6>Newsletter</h6>
                    <p>Receive invites to exclusive suites, curated experiences, and insider rates.</p>
                    <form class="newsletter-form" aria-label="Newsletter subscription">
                        <label for="newsletter-email" class="visually-hidden">Email Address</label>
                        <input type="email" 
                               id="newsletter-email" 
                               class="form-control" 
                               placeholder="Email Address" 
                               aria-label="Email Address">
                        <button type="submit" class="btn btn-gold w-100 mt-2">Subscribe</button>
                    </form>
                </div>
            </div>
            <div class="footer-bottom mt-4 d-flex flex-column flex-md-row justify-content-between align-items-center">
                <p class="mb-0">&copy; @DateTime.UtcNow.Year Bookify. Crafted for discerning travelers.</p>
                <div class="footer-meta">
                    <span>Luxury | Design | Hospitality</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Global Search Modal -->
    <div class="modal fade" 
         id="globalSearchModal" 
         tabindex="-1" 
         aria-labelledby="globalSearchModalLabel" 
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content search-modal">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold text-uppercase" id="globalSearchModalLabel">Search Bookify</h5>
                    <button type="button" 
                            class="btn-close" 
                            data-bs-dismiss="modal" 
                            aria-label="Close search modal"></button>
                </div>
                <div class="modal-body">
                    <form id="global-search-form" method="get" asp-controller="Rooms" asp-action="Search">
                        <div class="search-bar">
                            <i class="bi bi-search" aria-hidden="true"></i>
                            <label for="global-search-input" class="visually-hidden">Search for hotels, destinations, or experiences</label>
                            <input type="text" 
                                   id="global-search-input" 
                                   name="query"
                                   class="form-control" 
                                   placeholder="Hotel, destination, or experience"
                                   aria-label="Search for hotels, destinations, or experiences"
                                   required>
                        </div>
                        <button type="submit" class="btn btn-gold w-100 mt-3" style="display: none;">
                            Search
                        </button>
                    </form>
                    <div class="popular-searches mt-4">
                        <span>Popular: </span>
                        <button type="button" class="chip" data-search="Family Suites" aria-label="Search for Family Suites">Family Suites</button>
                        <button type="button" class="chip" data-search="Spa & Wellness" aria-label="Search for Spa & Wellness">Spa & Wellness</button>
                        <button type="button" class="chip" data-search="Beachfront" aria-label="Search for Beachfront">Beachfront</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- External Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@fancyapps/ui/dist/fancybox.umd.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Application Scripts -->
    <script src="~/js/jwt-auth.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Inline Scripts -->
    <script>
        // Configure Toastr
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
        
        // Update cart count from session
        function updateCartCount() {
            fetch('@Url.Action("GetCartCount", "Cart")')
                .then(response => response.json())
                .then(data => {
                    if (data.count !== undefined) {
                        $('#cart-count').text(data.count);
                    }
                })
                .catch(() => {});
        }
        
        // Update cart count on page load
        updateCartCount();

        // Navbar scroll state
        const navbar = document.getElementById('bookifyNavbar');
        const handleScroll = () => {
            if (!navbar) return;
            if (window.scrollY > 80) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        };
        document.addEventListener('scroll', handleScroll);
        handleScroll();

        // Global Search Functionality
        (function() {
            const searchInput = document.getElementById('global-search-input');
            const searchForm = document.getElementById('global-search-form');
            const searchModal = document.getElementById('globalSearchModal');
            const popularChips = document.querySelectorAll('.chip[data-search]');

            if (!searchInput || !searchForm) return;

            // Handle form submission
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const query = searchInput.value.trim();
                if (query) {
                    // Close modal
                    const modalInstance = bootstrap.Modal.getInstance(searchModal);
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    // Navigate to search results
                    window.location.href = '@Url.Action("Search", "Rooms")?query=' + encodeURIComponent(query);
                }
            });

            // Handle Enter key in search input
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    searchForm.dispatchEvent(new Event('submit'));
                }
            });

            // Handle popular search chips
            popularChips.forEach(function(chip) {
                chip.addEventListener('click', function() {
                    const searchTerm = this.getAttribute('data-search');
                    if (searchTerm) {
                        searchInput.value = searchTerm;
                        // Close modal
                        const modalInstance = bootstrap.Modal.getInstance(searchModal);
                        if (modalInstance) {
                            modalInstance.hide();
                        }
                        // Navigate to search results
                        window.location.href = '@Url.Action("Search", "Rooms")?query=' + encodeURIComponent(searchTerm);
                    }
                });
            });

            // Clear search input when modal is hidden
            searchModal.addEventListener('hidden.bs.modal', function() {
                searchInput.value = '';
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

