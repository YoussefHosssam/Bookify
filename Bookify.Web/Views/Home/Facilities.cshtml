@{
    ViewData["Title"] = "Signature Facilities";
}

<section class="section-lux container-xl">
    <div class="section-heading text-center">
        <p class="eyebrow-text">Immersive Amenities</p>
        <h2>Facilities curated for discerning travelers</h2>
        <p class="section-subtext">Wellness rituals, culinary artistry, and personalized services across every Bookify destination.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <article class="lux-card gradient-card h-100">
                <h4 class="mb-2"><i class="bi bi-spa me-2"></i> Holistic Spa Sanctuaries</h4>
                <p>Private suites with aromatherapy steam, quartz heated tables, and visiting wellness masters.</p>
                <ul class="lux-list mt-3">
                    <li><i class="bi bi-check-circle"></i> Bespoke rituals and IV therapy</li>
                    <li><i class="bi bi-check-circle"></i> Sound bath studio</li>
                    <li><i class="bi bi-check-circle"></i> On-demand beauty atelier</li>
                </ul>
            </article>
        </div>
        <div class="col-lg-4 col-md-6">
            <article class="lux-card h-100">
                <h4 class="mb-2"><i class="bi bi-water me-2"></i> Pools & Hydro lounges</h4>
                <p>Skyline infinity pools, subterranean vitality pools, and private cabanas serviced by pool butlers.</p>
                <ul class="lux-list mt-3">
                    <li><i class="bi bi-check-circle"></i> Temperature-zoned vitality pools</li>
                    <li><i class="bi bi-check-circle"></i> Champagne cabana service</li>
                    <li><i class="bi bi-check-circle"></i> Nighttime projection cinema</li>
                </ul>
            </article>
        </div>
        <div class="col-lg-4 col-md-6">
            <article class="lux-card h-100">
                <h4 class="mb-2"><i class="bi bi-cup-hot me-2"></i> Gastronomy & Mixology</h4>
                <p>Chef's tables, rotating tasting menus, and speakeasy lounges curated by award-winning mixologists.</p>
                <ul class="lux-list mt-3">
                    <li><i class="bi bi-check-circle"></i> 24/7 in-suite dining</li>
                    <li><i class="bi bi-check-circle"></i> Artisan patisserie labs</li>
                    <li><i class="bi bi-check-circle"></i> Rare spirits vault</li>
                </ul>
            </article>
        </div>
    </div>

    <div class="cta-banner mt-5">
        <div>
            <p class="eyebrow-text">Private Events & Buyouts</p>
            <h3>Need a curated experience for celebrations or executive retreats?</h3>
        </div>
        <a href="@Url.Action("Contact", "Home")" class="btn btn-gold btn-lg">Speak with concierge</a>
    </div>
</section>

