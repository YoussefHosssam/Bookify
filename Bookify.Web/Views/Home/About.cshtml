@{
    ViewData["Title"] = "About";
}

<section class="section-lux container-xl">
    <div class="section-heading text-center">
        <p class="eyebrow-text">Our Story</p>
        <h2>The Bookify Private Collection</h2>
        <p class="section-subtext">An invitation-only portfolio of residences, penthouses, and villas celebrating design, culture, and hospitality.</p>
    </div>

    <div class="row g-4 align-items-center">
        <div class="col-lg-6">
            <div class="lux-card gradient-card">
                <h3>Design-first hospitality</h3>
                <p>Bookify partners with iconic properties and curates private residences in legendary destinations. Every stay is tailored by an on-call concierge, with orchestration that begins well before arrival.</p>
                <ul class="lux-list mt-3">
                    <li><i class="bi bi-check-circle"></i> Dedicated curators & travel designers</li>
                    <li><i class="bi bi-check-circle"></i> Verified residences with cultural provenance</li>
                    <li><i class="bi bi-check-circle"></i> Sustainability & community partnerships</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row g-3">
                <div class="col-6">
                    <div class="metric-card text-center">
                        <h5>Destinations</h5>
                        <div class="value">60+</div>
                        <p class="text-muted small mb-0">Across 5 continents</p>
                    </div>
                </div>
                <div class="col-6">
                    <div class="metric-card text-center">
                        <h5>Guest Rating</h5>
                        <div class="value">4.9</div>
                        <p class="text-muted small mb-0">Average satisfaction</p>
                    </div>
                </div>
                <div class="col-12">
                    <div class="lux-card h-100">
                        <h4>Signature Services</h4>
                        <p>Private aviation charters, Michelin reservations, wellness residencies, and art concierge experiences are available through our global network.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

