@{
    ViewData["Title"] = "Contact";
}

<section class="section-lux container-xl">
    <div class="section-heading text-center">
        <p class="eyebrow-text">Concierge Desk</p>
        <h2>Connect with Bookify</h2>
        <p class="section-subtext">Our guest experience team is available 24/7 for itinerary planning, partnership inquiries, and bespoke requests.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="lux-card h-100">
                <h4 class="mb-3">Send us a message</h4>
                <form>
                    <div class="mb-3 floating-label">
                        <input type="text" class="form-control" placeholder=" " required>
                        <label>Name</label>
                    </div>
                    <div class="mb-3 floating-label">
                        <input type="email" class="form-control" placeholder=" " required>
                        <label>Email</label>
                    </div>
                    <div class="mb-3 floating-label">
                        <textarea class="form-control" rows="4" placeholder=" " required></textarea>
                        <label>How can we assist?</label>
                    </div>
                    <button type="submit" class="btn btn-gold w-100">Submit Inquiry</button>
                </form>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="contact-grid">
                <article>
                    <h5><i class="bi bi-headset me-2"></i> Reservations</h5>
                    <p>concierge@bookify.com<br />+20 2 1234 5678</p>
                </article>
                <article>
                    <h5><i class="bi bi-briefcase me-2"></i> Partnerships</h5>
                    <p>alliances@bookify.com<br />+20 2 1234 5679</p>
                </article>
                <article>
                    <h5><i class="bi bi-geo-alt me-2"></i> Flagship Atelier</h5>
                    <p>Nile Corniche, Zamalek, Cairo, Egypt<br />Open Mon–Sat, 10am–7pm</p>
                </article>
                <article>
                    <h5><i class="bi bi-chat-dots me-2"></i> Live Chat</h5>
                    <p>Available inside the Bookify app for members</p>
                </article>
            </div>
        </div>
    </div>
</section>

