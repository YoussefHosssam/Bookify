@model IEnumerable<Bookify.Data.Entities.RoomType>
@{
    ViewData["Title"] = "Manage Room Types";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building"></i> Manage Room Types</h1>
        <div>
            <a href="@Url.Action("Create", "RoomTypes", new { area = "Admin" })" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Room Type
            </a>
            <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var roomType in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="admin-card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">@roomType.Name</h5>
                    </div>
                    <div>
                            <p class="text-muted">@roomType.Description</p>
                            <dl class="mb-3">
                                <dt>Capacity:</dt>
                                <dd>@roomType.Capacity guests</dd>
                                <dt>Base Price:</dt>
                                <dd><span class="price-badge">$@roomType.BasePricePerNight /night</span></dd>
                            </dl>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Edit", "RoomTypes", new { area = "Admin", id = roomType.Id })" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form method="post" asp-action="Delete" asp-route-id="@roomType.Id">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="btn btn-danger btn-sm w-100"
                                            data-confirm="true"
                                            data-confirm-title="Delete Room Type"
                                            data-confirm-message="Are you sure you want to delete @roomType.Name?">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
    else
    {
        <div class="alert-admin alert-info-admin text-center">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No Room Types Found</h4>
            <p>There are no room types in the system yet.</p>
            <a href="@Url.Action("Create", "RoomTypes", new { area = "Admin" })" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle"></i> Add First Room Type
            </a>
        </div>
    }
</div>

