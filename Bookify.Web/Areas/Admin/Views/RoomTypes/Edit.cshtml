@model Bookify.Data.Entities.RoomType
@{
    ViewData["Title"] = "Edit Room Type";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-pencil"></i> Edit Room Type</h1>
        <a href="@Url.Action("Index", "RoomTypes", new { area = "Admin" })" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Room Types
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0">Room Type Information</h5>
            </div>
            <div>
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BasePricePerNight" class="form-label"></label>
                            <input asp-for="BasePricePerNight" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="BasePricePerNight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amenities" class="form-label"></label>
                            <textarea asp-for="Amenities" class="form-control" rows="3" placeholder="e.g., Wi-Fi, TV, Air Conditioning"></textarea>
                            <span asp-validation-for="Amenities" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "RoomTypes", new { area = "Admin" })" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Update Room Type
                            </button>
                        </div>
            </form>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

