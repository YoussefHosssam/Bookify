@model Bookify.Data.Entities.Room
@{
    ViewData["Title"] = "Create Room";
    var roomTypes = ViewBag.RoomTypes as IEnumerable<Bookify.Data.Entities.RoomType> ?? new List<Bookify.Data.Entities.RoomType>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-plus-circle"></i> Create New Room</h1>
        <a href="@Url.Action("Index", "Rooms", new { area = "Admin" })" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Rooms
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0">Room Information</h5>
            </div>
            <div>
                    <form asp-action="Create" asp-area="Admin" asp-controller="Rooms" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="RoomNumber" class="form-label">Room Number <span class="text-danger">*</span></label>
                            <input asp-for="RoomNumber" class="form-control" required maxlength="50" />
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoomTypeId" class="form-label">Room Type <span class="text-danger">*</span></label>
                            <select asp-for="RoomTypeId" class="form-select" required>
                                <option value="">-- Select Room Type --</option>
                                @foreach (var roomType in roomTypes)
                                {
                                    <option value="@roomType.Id">@roomType.Name</option>
                                }
                            </select>
                            <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Floor" class="form-label">Floor <span class="text-danger">*</span></label>
                            <input asp-for="Floor" class="form-control" type="number" min="1" step="1" required />
                            <span asp-validation-for="Floor" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Active
                            </label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Rooms", new { area = "Admin" })" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Room
                            </button>
                        </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Handle form submission
        $('form').on('submit', function(e) {
            const form = $(this);
            
            // Clear previous validation
            form.removeClass('was-validated');
            
            // Check HTML5 validation
            if (!form[0].checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
                form.addClass('was-validated');
                
                // Scroll to first error
                const firstError = form.find('.is-invalid, .text-danger').first();
                if (firstError.length) {
                    $('html, body').animate({
                        scrollTop: firstError.offset().top - 100
                    }, 500);
                }
                return false;
            }

            // Show loading state
            const submitBtn = form.find('button[type="submit"]');
            const originalText = submitBtn.html();
            submitBtn.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Creating...');
            
            // Allow form to submit
            return true;
        });
        
        // Add validation classes on blur
        $('input, select').on('blur', function() {
            const field = $(this);
            if (field[0].checkValidity()) {
                field.removeClass('is-invalid').addClass('is-valid');
            } else {
                field.removeClass('is-valid').addClass('is-invalid');
            }
        });
    </script>
}

