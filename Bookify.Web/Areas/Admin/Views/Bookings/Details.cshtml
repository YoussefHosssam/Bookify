@model Bookify.Data.Entities.Booking
@{
    ViewData["Title"] = "Booking Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-calendar-check"></i> Booking Details</h1>
        <a href="@Url.Action("Index", "Bookings", new { area = "Admin" })" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Back to Bookings
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0">Booking Information</h5>
            </div>
            <div>
                    <dl class="row">
                        <dt class="col-sm-4">Booking Number:</dt>
                        <dd class="col-sm-8"><strong>@Model.BookingNumber</strong></dd>

                        <dt class="col-sm-4">User ID:</dt>
                        <dd class="col-sm-8">@Model.UserId</dd>

                        <dt class="col-sm-4">Room:</dt>
                        <dd class="col-sm-8">@(Model.Room?.RoomNumber ?? "N/A") - @(Model.RoomType?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4">Check In:</dt>
                        <dd class="col-sm-8">@Model.CheckIn.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Check Out:</dt>
                        <dd class="col-sm-8">@Model.CheckOut.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Nights:</dt>
                        <dd class="col-sm-8">@Model.Nights</dd>

                        <dt class="col-sm-4">Total Amount:</dt>
                        <dd class="col-sm-8"><span class="price-badge">$@Model.TotalAmount</span></dd>

                        <dt class="col-sm-4">Currency:</dt>
                        <dd class="col-sm-8">@Model.Currency</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Confirmed" ? "success" : Model.Status == "Cancelled" ? "danger" : Model.Status == "Completed" ? "info" : "warning")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Stripe Payment Intent:</dt>
                        <dd class="col-sm-8">@(Model.StripePaymentIntentId ?? "N/A")</dd>

                        <dt class="col-sm-4">Created At:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>

                        <dt class="col-sm-4">Updated At:</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>
                    </dl>
                </div>
            </div>
    </div>
    <div class="col-md-4">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div>
                    @if (Model.Status != "Cancelled" && Model.Status != "Completed")
                    {
                        <form method="post" asp-action="Cancel" asp-route-id="@Model.Id">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100 mb-2" onclick="return confirm('Are you sure you want to cancel this booking?')">
                                <i class="bi bi-x-circle"></i> Cancel Booking
                            </button>
                        </form>
                    }
                    <a href="@Url.Action("Index", "Bookings", new { area = "Admin" })" class="btn btn-outline-primary w-100">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
            </div>
        </div>
    </div>
</div>

